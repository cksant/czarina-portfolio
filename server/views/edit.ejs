<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the name"
                    name="name" 
                    value="<%= contacts.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter your number"
                    name="number" 
                    value="<%= contacts.number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">E-mail</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter your e-mail"
                    name="email" 
                    value="<%= contacts.email %>"
                    required>
                </div>


                <button class="btn btn-primary" type="submit">
                    Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                    Cancel</a>

            </form>
        </div>

    </div>
</div>


