<%- include ../partials/header.ejs %>
<%- include ../partials/nav_bar.ejs %>

<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <a href="/game-list/add" class="button" role="button">Add a Game</a>
            <br>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Developer</th>
                    <th class="text-center">Released</th>
                    <th class="text-center">Description</th>
                    <th class="text-center">Price</th>
                    <th class="text-center"></th>
                    <th class="text-center"></th>
                </tr>

                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < GameList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= GameList[count].name %></td>
                        <td class="text-center"><%= GameList[count].developer %></td>
                        <td class="text-center"><%= GameList[count].released %></td>
                        <td class="text-center"><%= GameList[count].description %></td>
                        <td class="text-center"><%= GameList[count].price %></td>
                        <td class="text-center">
                            <a href="/game-list/edit/<%= GameList[count]._id%>" class="button" role="button">
                                Edit Game
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="/game-list/delete/<%= GameList[count]._id%>" class="button" role="button">
                                Delete Game
                            </a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>


<%- include ../partials/footer.ejs %>